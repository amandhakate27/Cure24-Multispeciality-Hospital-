# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Port
PORT=5000

# MongoDB Connection URI
# Example: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/cure24

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Admin Username
ADMIN_USERNAME=admin

# Admin Password (optional - use either password or hash, not both)
ADMIN_PASSWORD=admin123

# Or use pre-hashed password (bcrypt hash)
# Generate hash: npx bcryptjs 10
# ADMIN_PASSWORD_HASH=$2a$10$...

# CORS Origin (comma-separated for multiple origins)
# For local development: http://localhost:5173
# For production: https://your-frontend-url.com,https://www.your-frontend-url.com
CORS_ORIGIN=http://localhost:5173

# Node Environment
NODE_ENV=development
